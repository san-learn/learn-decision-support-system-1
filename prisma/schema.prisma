generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Alternatif {
  id_alternatif   Int      @id @default(autoincrement())
  nama_alternatif String
  nilai_saw       Float    @default(0)
  rangking        Int      @default(0)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}

model Kriteria {
  id_kriteria    Int      @id @default(autoincrement())
  nama_kriteria  String
  bobot_kriteria Float
  tipe_kriteria  String
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
}

model Sub_Kriteria {
  id_sub_kriteria    Int    @id @default(autoincrement())
  id_kriteria        Int
  nama_sub_kriteria  String
  nilai_sub_kriteria Int
}

model Nilai {
  id_nilai                        Int    @id @default(autoincrement())
  id_alternatif                   Int
  id_kriteria                     Int
  id_sub_kriteria                 Int
  nilai_simple_additive_weighting Float?
}
